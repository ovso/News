<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".web.WebActivity"
    >

  <io.github.ovso.news.web.WebViewPager
      android:id="@id/viewpager"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toTopOf="@+id/web_navigation_container"
      app:layout_constraintEnd_toEndOf="@+id/right_button"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <ImageButton
      android:id="@+id/left_button"
      android:layout_width="50dp"
      android:layout_height="100dp"
      android:background="?android:attr/selectableItemBackground"
      android:scaleType="fitCenter"
      app:layout_constraintBottom_toBottomOf="@+id/root_view"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/ic_left"
      />

  <ImageButton
      android:id="@+id/right_button"
      android:layout_width="50dp"
      android:layout_height="100dp"
      android:layout_marginBottom="8dp"
      android:background="?android:attr/selectableItemBackground"
      android:scaleType="fitCenter"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="@+id/root_view"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/ic_right"
      />

  <include
      layout="@layout/web_navigation"
      android:id="@id/web_navigation_container"
      android:layout_width="match_parent"
      android:layout_height="@dimen/dp_40"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      />
</android.support.constraint.ConstraintLayout>
