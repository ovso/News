<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".web.WebActivity"
    >

  <io.github.ovso.news.web.WebViewPager
      android:id="@id/viewpager"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="1.0"
      />

  <ImageButton
      android:id="@+id/left_button"
      android:layout_width="50dp"
      android:layout_height="100dp"
      app:layout_constraintBottom_toBottomOf="@+id/root_view"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/ic_left"
      android:scaleType="fitCenter"
      android:background="?android:attr/selectableItemBackground"
      />

  <android.support.design.widget.FloatingActionButton
      android:id="@id/fab"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom|end"
      android:layout_marginBottom="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="8dp"
      app:backgroundTint="@android:color/white"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:srcCompat="@drawable/ic_format_align"
      />
  <android.support.design.widget.FloatingActionButton
      android:id="@id/paging_lock_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom|left"
      android:layout_marginBottom="16dp"
      android:layout_marginStart="8dp"
      app:backgroundTint="@android:color/white"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:srcCompat="@drawable/ic_lock_open"
      />
  <ImageButton
      android:id="@+id/right_button"
      android:layout_width="50dp"
      android:layout_height="100dp"
      android:layout_marginBottom="8dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="@+id/root_view"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/ic_right"
      android:scaleType="fitCenter"
      android:background="?android:attr/selectableItemBackground"
      />

</android.support.constraint.ConstraintLayout>
